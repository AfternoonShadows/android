<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_ll_menu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/activity_btn_module"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/activity_selector_btn"
            android:text="@string/activity_btn_module"
            android:textColor="@color/activity_selector_txt"
            android:textSize="25dp" />

        <Button
            android:id="@+id/activity_btn_voice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/activity_selector_btn"
            android:text="@string/activity_btn_voice"
            android:textSize="25dp" />

        <Button
            android:id="@+id/activity_btn_video"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/activity_selector_btn"
            android:text="@string/activity_btn_video"
            android:textSize="25dp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/activity_fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/activity_ll_menu" />
</RelativeLayout>