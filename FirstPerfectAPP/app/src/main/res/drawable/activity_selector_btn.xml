<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="200" android:exitFadeDuration="200">
    <!--    设置背景色-->
    <!--    android:enterFadeDuration="200" 进入，动画时间200ms-->
    <!--    android:exitFadeDuration="200"  离开，动画时间200ms-->
    <item android:state_pressed="false">
        <shape>
            <!--    设置背景色-->
            <solid android:color="@color/white" />
            <!--  设置边框属性.
                  android:width="1dp" 边框宽度.
                  android:color="@color/black"    边框颜色.
                    -->
            <stroke android:width="1dp" android:color="@color/black" />
            <!--    设置圆角边框-->
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/yellow" />
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="@color/black" />
        </shape>
    </item>
</selector>